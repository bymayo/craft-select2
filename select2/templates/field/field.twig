{% import "_includes/forms" as forms %}

{% set fieldOptions = {
    id: id,
    class: 'select2 js-select2',
    name: name,
    options: options
} %}

{% if settings['multiple']|length %}
	{% set fieldOptions = fieldOptions|merge({ values: value}) %}
	{{ forms.multiSelectField(fieldOptions) }}
{% else %}
	{# Select - Single #}
	{% set fieldOptions = fieldOptions|merge({ value: value}) %}
	{{ forms.selectField(fieldOptions) }}
{% endif %}