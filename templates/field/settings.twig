{% import "_includes/forms" as forms %}

{% set select2ListValue = (settings.list ? settings.list : 'json') %}

{{ forms.selectField({
    label: 'List'|t,
    id: 'list',
    class: 'js-select2-list',
    name: 'list',
    value: select2ListValue,
    required: true,
    options: {
		'json' : {
            'value': 'json',
            'label': 'JSON'
		},
		'countries' : {
            'value': 'countries',
            'label': 'Countries'
		},
		'countriesIso2' : {
            'value': 'countriesIso2',
            'label': 'Countries (2 Digit ISO)'
		},
		'countriesIso3' : {
            'value': 'countriesIso3',
            'label': 'Countries (3 Digit ISO)'
		},
		'currencyIso3' : {
            'value': 'currencyIso3',
            'label': 'Currency (3 Digit ISO)'
		},
		'languagesIso2' : {
            'value': 'languagesIso2',
            'label': 'Languages (2 Digit ISO)'
		},
		'socialNetworks' : {
            'value': 'socialNetworks',
            'label': 'Social Networks'
		},
		'ukCounties' : {
            'value': 'ukCounties',
            'label': 'UK Counties'
		},
		'usStates' : {
            'value': 'usStates',
            'label': 'US States'
		}		
    }
}) }}

<div class="js-select2-json{% if select2ListValue == 'json'%} is-visible{% endif %}">
	{% if jsonFiles|length %}
		{{ forms.selectField({
		    label: 'JSON File'|t,
		    id: 'jsonFile',
		    name: 'jsonFile',
		    value: settings.jsonFile,
			options: jsonFiles
		}) }}
	{% else %}
		<div class="field">
			<div class="heading">
				<label>JSON</label>
			</div>
			<strong class="warning">No JSON file(s) exist</strong>
			<p class="select2-alert">
				JSON files are pulled from the <code>select2</code> folder inside your template folder. Unless a different folder has been set using the 		<code>jsonFolder</code> config setting. <a href="#" target="_blank">See Documentation</a>
			</p>
		</div>
	{% endif %}
</div>

{{ forms.lightswitchField({
    label: 'Select Multiple?'|t,
    id: 'multiple',
    name: 'multiple',
    on: settings.multiple, 
    required: true
}) }}

{{ forms.textField({
    label: 'Limit'|t,
    type: 'number',
    instructions: 'Limit the amount of results that can be selected.',
    id: 'limit',
    name: 'limit',
    value: settings.limit
}) }}

{{ forms.textField({
    label: 'Placeholder'|t,
    type: 'text',
    id: 'placeholder',
    name: 'placeholder',
    value: settings.placeholder
}) }}