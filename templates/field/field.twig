{% import "_includes/forms" as forms %}

{% set fieldOptions = {
    id: id,
    class: 'js-select2',
    name: name,
    values: value,
    required: false,
    options: options
} %}

{% if settings['multiple']|length %}

	{# Select - Multiple #}
	{{ forms.multiSelectField(fieldOptions) }}
	
{% else %}

	{# Select - Single #}
	{{ forms.selectField(fieldOptions) }}
	
{% endif %}